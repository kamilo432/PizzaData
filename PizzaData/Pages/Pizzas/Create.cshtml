@page
@using PizzaData.Models;
@model PizzaData.Pages.Pizzas.CreateModel

@{
    ViewData["Title"] = "Create";
    var flours = ViewData["Flours"] as List<Flour> ?? new List<Flour>();
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Pizza.FlourName" class="control-label"></label>
                <select asp-for="Pizza.FlourName" class="form-control" >
                    <option value="">Choose flour</option>
                    @foreach (var flour in flours)
                    {
                        <option value="@flour.FlourName">@flour.FlourName</option>
                    }
                </select>
                <span asp-validation-for="Pizza.FlourName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Pizza.FlourAmount" class="control-label"></label>
                <input asp-for="Pizza.FlourAmount" class="form-control" />
                <span asp-validation-for="Pizza.FlourAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.WaterAmount" class="control-label"></label>
                <input asp-for="Pizza.WaterAmount" class="form-control" />
                <span asp-validation-for="Pizza.WaterAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.YeastAmount" class="control-label"></label>
                <input asp-for="Pizza.YeastAmount" class="form-control" />
                <span asp-validation-for="Pizza.YeastAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.OliveOilAmount" class="control-label"></label>
                <input asp-for="Pizza.OliveOilAmount" class="form-control" />
                <span asp-validation-for="Pizza.OliveOilAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.SaltAmount" class="control-label"></label>
                <input asp-for="Pizza.SaltAmount" class="form-control" />
                <span asp-validation-for="Pizza.SaltAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.AmbientFermentationTime" class="control-label"></label>
                <input asp-for="Pizza.AmbientFermentationTime" class="form-control" />
                <span asp-validation-for="Pizza.AmbientFermentationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.FridgeFermentationTime" class="control-label"></label>
                <input asp-for="Pizza.FridgeFermentationTime" class="form-control" />
                <span asp-validation-for="Pizza.FridgeFermentationTime" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-right:5px; padding-top:5px">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
